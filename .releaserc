{
  branches:
    [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      { name: "develop", prerelease: "beta", channel: "beta" },
    ],
  plugins:
    [
      "@semantic-release/commit-analyzer",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": ["solnlib/__init__.py"],
              "from": "__version__ ?=.*",
              "to": "__version__ = \"${nextRelease.version}\"",
              "results": [
                {
                  "file": "solnlib/__init__.py",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            },
            {
              "files": ["pyproject.toml"],
              "from": "version ?=.*",
              "to": "version = \"${nextRelease.version}\"",
              "results": [
                {
                  "file": "pyproject.toml",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "verifyReleaseCmd": "echo \"version=${nextRelease.version}\" >> $GITHUB_OUTPUT",
          "successCmd": "echo \"new_release_published=${'true'}\" >> $GITHUB_OUTPUT"
        },
      ],
      [
        "@semantic-release/git",
        {
          "assets": ["NOTICE", "pyproject.toml", "solnlib/__init__.py"],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes} [ci skip]",
        },
      ],
      ["@semantic-release/github", { "assets": ["NOTICE", "pyproject.toml"] }],
    ],
}
